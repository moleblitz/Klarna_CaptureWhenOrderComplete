<?xml version="1.0"?>
<config>
    <modules>
        <Klarna_CaptureWhenOrderComplete>
            <version>1.0.4</version>
        </Klarna_CaptureWhenOrderComplete>
    </modules>
    <global>
        <helpers>
            <klarna_capturewhenordercomplete>
                <class>Klarna_CaptureWhenOrderComplete_Helper</class>
            </klarna_capturewhenordercomplete>
        </helpers>
        <models>
            <klarna_capturewhenordercomplete>
                <class>Klarna_CaptureWhenOrderComplete_Model</class>
            </klarna_capturewhenordercomplete>
        </models>
        <events>
            <sales_order_shipment_save_before>
                <observers>
                    <klarna_capture_before_shipment_save>
                        <type>model</type>
                        <class>klarna_capturewhenordercomplete/observer</class>
                        <method>captureInvoices</method>
                    </klarna_capture_before_shipment_save>
                </observers>
            </sales_order_shipment_save_before>
            <kco_push_notification_after>
                <observers>
                    <klarna_capturewhenordercomplete_create_invoice>
                        <type>model</type>
                        <class>klarna_capturewhenordercomplete/observer</class>
                        <method>kcoCreateInvoice</method>
                    </klarna_capturewhenordercomplete_create_invoice>
                </observers>
            </kco_push_notification_after>
        </events>
    </global>
</config>
